public class Daire {
    public static void main(String[] args) {
        int r;
        double alan,cevre,PI=3.14,a;
        Scanner inp=new Scanner(System.in);
        System.out.println("YarÄ± Ã‡ap giriniz:");
        r=inp.nextInt();
        alan=PI*r*r;
        cevre=2*PI*r;
        System.out.println("Alan:"+alan +"\n Cevre"+cevre);

        System.out.println("Daire dilimi alanÄ± iÃ§in merkez aÃ§Ä±sÄ± giriniz");
        a=inp.nextDouble();
        alan=(PI * (r*r) * a) / 360;

        System.out.println("Alan:"+ alan);

    }
}
